{
  "manifest_version": 3,
  "name": "Text Simplifier",
  "version": "1.0",
  "description": "Simplify selected text using DeepSeek AI.",
  "permissions": [
    "contextMenus",
    "scripting",
    "notifications",
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
